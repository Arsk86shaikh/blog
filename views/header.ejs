.navbar .theme-switcher {
  padding: 10px 15px;
  border: none;
  border-radius: 5px;
  background-color: aquamarine; /* Original color button */
  color: #ecf0f1;
  cursor: pointer;
  transition: background-color 0.3s;
}

.navbar .theme-switcher:hover {
  background-color: #cfad4e; /* Lighten color on hover */
}

/* Light Theme Styles */
body.light-theme, .navbar.light-theme {
  background-color: #d4dddd; /* Light gray background */
  color: #333; /* Dark text */
}

body.light-theme .navbar .theme-switcher {
  background-color: #333; /* Dark button for light theme */
  color: #f0f0f0;
}

body.light-theme .navbar .theme-switcher:hover {
  background-color: #666; /* Darker button color on hover */
}
