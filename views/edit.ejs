<%- include('header.ejs') %>
<link rel="stylesheet" href="style.css">
<style>
    .navbar-brand {
 padding-top: .3125rem;
 padding-bottom: .3125rem;
 margin-right: 1rem;
 font-size: 1.25rem;
 text-decoration: none;
 white-space: nowrap;
 font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; 
}
body{
    background-color: hsl(217, 90%, 89%);
    width: 100%;
    height: 100%;
    font-family: Arial, Helvetica, sans-serif;
    margin: 20px;

}
.container{
    max-width: auto;
    margin: 0 auto;
    padding: 20px;
    background-color: lightblue;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(43, 6, 6, 0.1);
  
}


h1 {
    text-align: center;
    color: #333;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
    padding-top: 20px;
}
form {
    max-width: auto;
    max-height: auto;
    margin: 0 auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    
}
button{
    background-color: aquamarine;
    font-size: large;
    border: none;
    border-radius: 15px;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; 
    font-weight: bold;
   
}

h1:hover{
    color: rgb(97, 196, 230);
}
label {
    text-align: center;
    color: #333;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
    font-size: 20px;
    font-weight: bold;
    padding-bottom: 30px;
}
#content{
    padding-top: 20px;
}
input{
    justify-content: center;
    width: 50%;
    margin-left: 20px;
    border-radius: 15px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
    font-size: medium;
  
}
textarea{
    width: 50%;
    height: auto;
    border-radius: 15px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
    padding-top: 50px;
    font-size: larger;

}
form{
    /* padding-top: 50px; */
    padding-bottom: 20px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
}



</style>

<h1>Edit Post :</h1>
<div class="container">
<form action="/posts/<%= post.id %>?_method=PUT" method="POST">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="<%= post.title %>" required>
    <br>
    <label for="content">Content:</label>
    <textarea name="content" id="content" required><%= post.content %></textarea>
    <br>
    <button type="submit">Update Post</button>
    
</form>
<br>
</div>

<a href="/posts"><button> Back to Posts <img src="/public/right-arrow.png" alt=""></button> </a>
